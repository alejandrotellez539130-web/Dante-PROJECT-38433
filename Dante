# 3. Crear dante_dna.js
cat << 'EOF' > Dante_Diamante/js/dante_dna.js
const ODU_DB = {
    "Ogbe": {b:"1111", v:"Claridad", d:"Ego"}, "Yekun": {b:"0000", v:"Profundidad", d:"Muerte"},
    "Iwori": {b:"0110", v:"L√≥gica", d:"Duda"}, "Odi": {b:"1001", v:"Libertad", d:"Bloqueo"},
    "Irosun": {b:"0101", v:"Visi√≥n", d:"Ilusi√≥n"}, "Owonrin": {b:"1010", v:"Cambio", d:"Caos"},
    "Obara": {b:"0111", v:"Voz", d:"Mentira"}, "Okanran": {b:"1000", v:"Justicia", d:"Ira"},
    "Ogunda": {b:"1110", v:"Fuerza", d:"Violencia"}, "Osa": {b:"0100", v:"Viento", d:"Miedo"},
    "Ika": {b:"1100", v:"Poder", d:"Maldad"}, "Oturupon": {b:"0011", v:"Salud", d:"Enfermedad"},
    "Otura": {b:"1011", v:"Verdad", d:"Confusi√≥n"}, "Irete": {b:"0010", v:"Presi√≥n", d:"Crueldad"},
    "Ose": {b:"1101", v:"Amor", d:"Celos"}, "Ofun": {b:"0001", v:"Milagro", d:"Avaricia"}
};
EOF

# 4. Crear dante_zones.js
cat << 'EOF' > Dante_Diamante/js/dante_zones.js
function analizarZona(texto) {
    const t = texto ? texto.toLowerCase() : "";
    if(!t) return { zona: "VAC√çO", color: "#888", jefe: "Nadie" };
    if(t.match(/feliz|bien|amor|gracias|luz/)) return { zona: "CREDULIDAD", color: "#ff00ff", jefe: "Dionisio" };
    if(t.match(/dios|poder|yo|mando|dinero/)) return { zona: "EGO", color: "#00d4ff", jefe: "Zeus" };
    if(t.match(/triste|miedo|duda|no se|mal|dolor/)) return { zona: "IGNORANCIA", color: "#00ff41", jefe: "Tezcatlipoca" };
    return { zona: "NEUTRAL", color: "#f1c40f", jefe: "Virgilio" };
}
EOF

# 5. Crear dante_engine.js
cat << 'EOF' > Dante_Diamante/js/dante_engine.js
function calcularOduMaestro(fecha) {
    const f = fecha.toString();
    const claves = Object.keys(ODU_DB);
    const indexP1 = parseInt(f.slice(-2)) % 16;
    const indexP2 = parseInt(f.slice(4,6)) % 16;
    return { padre: claves[indexP1], madre: claves[indexP2] };
}
EOF

# 6. Crear main.js
cat << 'EOF' > Dante_Diamante/js/main.js
document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('btnAction');
    const inputSeed = document.getElementById('seed');
    const inputMood = document.getElementById('mood');

    function ejecutarSistema() {
        const box = document.getElementById('mainBox');
        const output = document.getElementById('console-output');
        const fecha = inputSeed.value;
        const mood = inputMood.value;

        if(fecha.length !== 8) {
            output.style.display = "block";
            output.className = "error-msg";
            output.innerText = "‚ùå ERROR: La fecha debe ser YYYYMMDD (8 d√≠gitos).";
            box.style.borderColor = "#ff3333";
            return;
        }

        const resultadoOdu = calcularOduMaestro(fecha);
        const analisis = analizarZona(mood);
        const d1 = ODU_DB[resultadoOdu.padre];
        const d2 = ODU_DB[resultadoOdu.madre];

        document.body.style.borderColor = analisis.color;
        box.style.borderColor = analisis.color;
        box.style.boxShadow = `0 0 25px ${analisis.color}40`;
        output.className = "";
        output.style.borderColor = analisis.color;
        output.style.color = analisis.color;
        output.style.display = "block";
        output.innerHTML = `
[VIRGILIO]: Sistema Diamante Cargado.
---------------------------------------
üÜî ODU: ${resultadoOdu.padre} - ${resultadoOdu.madre}
üíæ BIN: ${d1.b} :: ${d2.b}
‚ú® VIRTUD: ${d1.v} + ${d2.v}
üíÄ SOMBRA: ${d1.d} + ${d2.d}
---------------------------------------
üìç ESTADO: ZONA ${analisis.zona}
‚ö†Ô∏è JEFE: ${analisis.jefe}
        `.trim();
    }

    inputMood.addEventListener('keypress', (e) => { if(e.key === 'Enter') ejecutarSistema(); });
    inputSeed.addEventListener('keypress', (e) => { if(e.key === 'Enter') ejecutarSistema(); });
    btn.addEventListener('click', ejecutarSistema);
});
EOF

echo "üíé ¬°Carpeta Dante_Diamante creada con √©xito! Revisa tus archivos."
